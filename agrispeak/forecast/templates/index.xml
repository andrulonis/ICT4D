<?xml version="1.0" encoding="UTF-8"?>
{% load i18n %}
{% get_current_language as current_language %}
<vxml version="2.1" xml:lang="{{ current_language }}-{{ current_language }}">
    <form id="intro">
        <block>
            <prompt>
                {% translate "You've reached AgriSpeak, a service for rain prediction in the Sahel." %}
            </prompt>
            <goto next="#main"/>
        </block>
    </form>

    <menu id="main" dtmf="true">
        <prompt>
            {% translate "For daily forecast, press 1." %}
            {% translate "For information on yesterday's rainfall, press 2." %}
            {% translate "For estimated duration of rainfall, press 3." %}
            {% translate "For reporting feedback, press 4." %}
        </prompt>
        <choice next="#form1"/>
        <choice next="#form2"/>
        <choice next="#form3"/>
        <choice next="#form4"/>
    </menu>

    <form id="form1">
        <block>
            <prompt>
                {% translate "Rainfall expected today" %}: {{ rainfall_intensity_today }}.
            </prompt>
            <goto next="#main"/>
        </block>
    </form>

    <form id="form2">
        <block>
            <prompt>
                {% translate "Rainfall yesterday" %}: {{ rainfall_intensity_yesterday }}.
            </prompt>
            <goto next="#main"/>
        </block>
    </form>

    <form id="form3">
        <block>
            <prompt>
                Estimated duration of rainfall: 2 days.
            </prompt>
            <goto next="#main"/>
        </block>
    </form>

    <form id="form4">
        <block>
            <prompt>
                Please state your feedback.
            </prompt>
            <break time="4000ms"/>
            <prompt>
                Thank you.
            </prompt>
            <goto next="#main"/>
        </block>
    </form>
</vxml>
